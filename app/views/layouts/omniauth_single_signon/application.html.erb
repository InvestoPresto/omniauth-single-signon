<!DOCTYPE html>
<html>
<head>
  <title>SingleSignon</title>
  <%= stylesheet_link_tag    "single_signon/application", :media => "all" %>
  <%= javascript_include_tag "single_signon/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg.html_safe, :id => "flash_#{name}", :class => name if msg.is_a?(String) %>
<% end %>

<%= yield %>

</body>
</html>
